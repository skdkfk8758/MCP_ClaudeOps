{
  "name": "@claudeops/cli",
  "version": "1.0.0",
  "description": "CLI for managing ClaudeOps services",
  "type": "module",
  "bin": {
    "claudeops": "dist/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claudeops/shared": "workspace:*",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "@types/node": "^22.0.0"
  }
}
