{
  "name": "@claudeops/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Claude Code Operations Dashboard",
  "type": "module",
  "bin": {
    "claudeops-mcp": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist/"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@claudeops/shared": "workspace:*",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "@types/node": "^25.2.2"
  }
}
