{
  "name": "@claudeops/backend",
  "version": "1.0.0",
  "description": "Fastify backend API for ClaudeOps",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsx watch src/index.ts",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@claudeops/shared": "workspace:*",
    "fastify": "^5.7.4",
    "@fastify/websocket": "^11.2.0",
    "@fastify/cors": "^11.2.0",
    "better-sqlite3": "^12.6.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "@types/node": "^25.2.2",
    "@types/better-sqlite3": "^7.6.13"
  }
}
